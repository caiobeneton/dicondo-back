// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Condominio {
  id              Int         @id @default(autoincrement())
  nome            String
  endereco        String
  numero_unidades Int
  unidades        Unidade[]
  AreaComum       AreaComum[]
  Aviso           Aviso[]
}

model Unidade {
  id              Int          @id @default(autoincrement())
  numero          Int
  tamanho         Float
  condominio      Condominio   @relation(fields: [id_condominio], references: [id])
  id_condominio   Int
  proprietario    Proprietario @relation(fields: [id_proprietario], references: [id])
  id_proprietario Int
}

model Proprietario {
  id       Int       @id @default(autoincrement())
  nome     String
  endereco String
  telefone String
  email    String
  unidades Unidade[]
  reservas Reserva[]
  Sessao   Sessao[]
}

model Funcionario {
  id       Int    @id @default(autoincrement())
  nome     String
  funcao   String
  telefone String
  email    String
}

model AreaComum {
  id            Int        @id @default(autoincrement())
  nome          String
  descricao     String?
  condominio    Condominio @relation(fields: [id_condominio], references: [id])
  id_condominio Int
  reservas      Reserva[]
}

model Reserva {
  id               Int          @id @default(autoincrement())
  area_comum       AreaComum    @relation(fields: [id_area_comum], references: [id])
  id_area_comum    Int
  proprietario     Proprietario @relation(fields: [id_proprietario], references: [id])
  id_proprietario  Int
  data_hora_inicio DateTime
  data_hora_fim    DateTime
}

model Aviso {
  id             Int        @id @default(autoincrement())
  assunto        String
  mensagem       String
  data_criacao   DateTime   @default(now())
  data_expiracao DateTime?
  condominio     Condominio @relation(fields: [id_condominio], references: [id])
  id_condominio  Int
}

model Sessao {
  id            Int          @id @default(autoincrement())
  token         String       @unique
  data_validade DateTime
  usuario       Proprietario @relation(fields: [id_usuario], references: [id])
  id_usuario    Int
}
